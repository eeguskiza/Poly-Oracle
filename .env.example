# ============================================================
# Poly-Oracle v1 Configuration
# Copy to .env and fill in required values.
# ============================================================

# --- REQUIRED: Target Market ---
# Polymarket condition ID for the BTC market you want to trade.
# Find it on polymarket.com -> market page -> URL contains the ID.
BTC_MARKET_ID=

# --- Trading Mode ---
PAPER_TRADING=true

# --- Trading Loop ---
LOOP_INTERVAL_MINUTES=60
DEBATE_ROUNDS=1

# --- Bankroll & Risk ---
INITIAL_BANKROLL=1.0
MIN_BET=0.10
MAX_BET=1.0
MAX_POSITION_PCT=0.10
MAX_DAILY_LOSS_PCT=0.10
MAX_DAILY_LOSS=0.20
MAX_OPEN_POSITIONS=3
MAX_SINGLE_MARKET_EXPOSURE=0.15
MIN_EDGE=0.08
MIN_CONFIDENCE=0.65
MIN_LIQUIDITY=1000

# --- Ollama LLM ---
OLLAMA_MODEL=mistral
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# --- Logging ---
LOG_LEVEL=INFO

# --- Polymarket API (required for live trading only) ---
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=

# --- Database ---
DB_DIR=db
